<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="МessageAir.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:МessageAir.VIew"
    Shell.FlyoutBehavior="Disabled"
    Title="МessageAir">

    <ShellContent
        Route="LoginView"
        ContentTemplate="{DataTemplate view:LoginView}"
        Title="Login"/>

    <ShellContent
        Route="ChatView"
        ContentTemplate="{DataTemplate view:ChatView}"
        Title="Chat"/>

</Shell>
